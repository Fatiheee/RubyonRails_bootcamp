<h1>User Profile</h1>
<p>User Name: <%= @user.username %> </p>
<p>User Email: <%= @user.email %> </p>
<p>User id: <%= @user.id %> </p> <br>

<% @books =  Book.where(status: true, user_id: @current_user) %>

<% if @books.any? %>

<p>You are sharing this/these book(s) :)</p>

<style>
body {background-color: #99ff99;}
table, th, td {
  border: 1px solid blue;
  border-collapse: collapse;
  padding: 8px;
  color: white;
  text-align: main;
}
#t01 {
  width: 38%;    
  background-color: #003300;
}
</style>
      <table id="t01">
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Pagecount</th>
            <th>Examine</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <% if book.user_id == @user.id %>
              <td><%= book.title %></td>
              <td><%= book.author %></td>
              <td><%= book.pagecount %></td>
              <td><%= link_to 'Show', book %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>

<br>

<%= link_to 'Back', books_path %>

<% else %>

  <p>There isn't book yet. Let's lend your books. </p>
  <%= link_to 'Lend Your Book', books_path %>

<% end %>