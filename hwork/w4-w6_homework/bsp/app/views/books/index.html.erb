<p id="notice"><%= notice %></p>

<h1 style="color:blue;">Your Books</h1>

<% if @books.any? %>

  <style>
  body {background-color: #cc99ff;}
  table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
    padding: 8px;
    text-align: main;
  }
  #t01 {
    width: 38%;    
    background-color: #99ccff;
  }
  </style>

  <table id="t01">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Pagecount</th>
        <th>Shareability</th>
        <th colspan="3">Transactions</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.pagecount %></td>
          <td><%= book.status %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

    <br>
    <%= link_to 'Add Book', new_book_path %>


<% else %>

  <p>There isn't book yet. Add your books... </p>
  <%= link_to 'Add Book', new_book_path %>

<% end %>
